# Тип базы данных: 'postgres' для продакшена, 'sqlite' для локальной разработки
# По умолчанию: postgres
DB_TYPE=postgres

# PostgreSQL (для продакшена)
DATABASE_URL=postgresql://user:password@localhost:5432/retro_db

# SQLite (для локальной разработки)
# Используйте только если DB_TYPE=sqlite
SQLITE_DB_PATH=./retro.db

# Порт сервера
PORT=3000

# Окружение: 'development' или 'production'
NODE_ENV=development
